<Page
    x:Class="AUTD3_GUI_Controller.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:localization="using:AK.Toolkit.WinUI3.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="HomePage_OnLoaded"
    mc:Ignorable="d">

    <Grid x:Name="Root">
        <StackPanel>
            <TextBlock localization:Localizer.Uid="Home_Line1" FontSize="{StaticResource MediumFontSize}" />
            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                localization:Localizer.Uid="Home_Line2"
                FontSize="{StaticResource MediumFontSize}" />
            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                localization:Localizer.Uid="Home_Line3"
                FontSize="{StaticResource MediumFontSize}" />
            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                localization:Localizer.Uid="Home_Line4"
                FontSize="{StaticResource MediumFontSize}" />
        </StackPanel>
    </Grid>
</Page>
